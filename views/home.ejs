                    Hosting dynamic websites can often be expensive, especially when compared to the numerous free options available for static sites like Netlify, Amazon Web Services, and Google Cloud.
                </div>
            </div>
        </div>
    </div>

    <script>
        window.onload = function() {
            const inputField = document.querySelector('.text');
            const placeholderText = inputField.placeholder;

            const bar = document.querySelector('.bar');
            const title = document.querySelector(".logo");
            const search = document.querySelector(".search");
            const logo = document.querySelector(".logo a");
            const button = document.querySelector(".button");
            const topics = document.querySelectorAll('.topic1');
            const menu = document.querySelector(".menu");
            const sidebar = document.querySelector(".sidebar");
            const sideflex = document.querySelector(".sideflex");
            const close = document.querySelector(".close i");

            function hidePlaceholder() {
                inputField.placeholder = '';
            }

            function showPlaceholder() {
                if (inputField.value === '') {
                    inputField.placeholder = placeholderText;
                }
            }

            function adjustBarWidth() {
                if (window.innerWidth <= 760) {
                    bar.style.width = `${logo.offsetWidth}px`;
                    button.style.width = "15%";
                    inputField.style.width = "85%";
                } else {
                    bar.style.width = '60%';
                    button.style.width = "10%";
                    inputField.style.width = "81%";
                    sideflex.style.display = "";
                    sidebar.style.display = "";
                    document.body.style.overflow = "";
                }

                topics.forEach(topic => {
                    if (window.innerWidth > 1170) {
                        const width = (document.body.clientWidth - 200) / 4;
                        topic.style.width = `${width}px`;
                    } 
                    else if (window.innerWidth <= 1170 && window.innerWidth >= 930) {
                        const width = (document.body.clientWidth - 170) / 3;
                        topic.style.width = `${width}px`;
                    }

                    else if(window.innerWidth < 930 && window.innerWidth > 680 ) {
                        const width = (document.body.clientWidth - 140) / 2;
                        topic.style.width = `${width}px`;
                    }
                    else if (window.innerWidth <= 680 && window.innerWidth >=250) {
                        topic.style.width = "100%";
                    }
                });    
            }

            function onclick() {
                sideflex.style.display = "block";
                sidebar.style.display = "block";
                document.body.style.overflow = "hidden";
            }

            function closeclick() {
                sideflex.style.display = "";
                sidebar.style.display = "";
                document.body.style.overflow = "";
            }


            adjustBarWidth();

            inputField.addEventListener('focus', hidePlaceholder);
            inputField.addEventListener('blur', showPlaceholder);
            menu.addEventListener('click',onclick);
            close.addEventListener('click',closeclick);

            window.addEventListener('resize', adjustBarWidth);

        };
    </script>
</body>
